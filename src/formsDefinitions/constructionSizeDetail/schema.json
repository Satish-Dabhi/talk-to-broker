{
    "title": "Construction Property Size Details",
    "type": "object",
    "required": [
        "constructionPropertySize"
    ],
    "properties": {
        "facilities": {
            "type": "array",
            "title": "Residential Facilities",
            "items": {
                "type": "string",
                "enum": [
                    "apartment",
                    "penthouse",
                    "terrace-flat",
                    "bungalow",
                    "villa",
                    "condominium",
                    "cottage",
                    "row-house",
                    "duplex-house",
                    "triplex-house",
                    "farm-house",
                    "stilt-house",
                    "tree-house",
                    "hut",
                    "eco-friendly-house",
                    "residential-plot"
                ]
            },
            "uniqueItems": true,
            "hidden": true
        },
        "addPropertyType": {
            "enum": [
                "developer-property",
                "old-property"
            ],
            "hidden": true
        },
        "constructionPropertySize": {
            "title": "Measuring Size",
            "enum": [
                "sq-ft",
                "sq-mtr",
                "acres",
                "hector",
                "gutha",
                "bigha"
            ],
            "enumNames": [
                "Sq. ft.",
                "Sq. mtr.",
                "Acres",
                "Hector",
                "Gutha",
                "Bigha"
            ],
            "md": 6
        },
        "constructionPropertyType": {
            "title": "Construction Property Type",
            "enum": [
                "carpet",
                "plot"
            ],
            "enumNames": [
                "Carpet",
                "Plot"
            ]
        },
        "constructionPropertyArea": {
            "title": "Area",
            "type": "number",
            "default": 0
        },
        "constructionPropertyTerraceArea": {
            "title": "Terrace Area If Any",
            "type": "number",
            "default": 0
        },
        "constructionPropertyTotalCarpet": {
            "title": "Total Carpet",
            "type": "number",
            "readOnly": true
        },
        "constructionPropertyBuiltUp": {
            "title": "Built Up",
            "type": "number",
            "default": 0
        },
        "constructionPropertySuperBuiltUp": {
            "title": "Super Built-Up/Total Construction",
            "type": "number",
            "default": 0
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "facilities": {
                        "contains": {
                            "const": "penthouse"
                        }
                    }
                }
            },
            "then": {
                "properties": {
                    "constructionPropertyLowerFloorCarpet": {
                        "title": "Lower Floor Carpet",
                        "type": "number",
                        "default": 0
                    },
                    "constructionPropertyUpperFloorCarpet": {
                        "title": "Upper Floor Carpet",
                        "type": "number",
                        "default": 0
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "addPropertyType": {
                        "enum": [
                            "developer-property"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "bifurcationOfArea": {
                        "title": "Bifurcation Of Carpet Area As Per RERA Authority",
                        "type": "object",
                        "properties": {
                            "reraCarpet": {
                                "title": "RERA Carpet",
                                "type": "number",
                                "default": 0,
                                "md": 6
                            },
                            "balcony": {
                                "title": "Balcony",
                                "type": "string",
                                "subFieldTitle": "Size Of Balcony",
                                "md": 12
                            },
                            "terrace": {
                                "title": "Deck / Terrace",
                                "type": "string",
                                "subFieldTitle": "Size Of Terrace",
                                "md": 12
                            },
                            "washArea": {
                                "title": "Wash Area",
                                "type": "number",
                                "default": 0,
                                "md": 6
                            },
                            "totalArea": {
                                "title": "Total Area",
                                "type": "number",
                                "default": 0,
                                "md": 6
                            }
                        }
                    }
                }
            }
        }
    ]
}