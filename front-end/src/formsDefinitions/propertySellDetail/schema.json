{
    "type": "object",
    "properties": {
        "addPropertyType": {
            "enum": [
                "developer-property",
                "old-property"
            ],
            "hidden": true
        },
        "pricePriceValue": {
            "title": "Property Price Structures",
            "type": "object",
            "required": [
                "projectedSellsPrice",
                "finalizedSellsValue"
            ],
            "properties": {
                "projectedSellsPrice": {
                    "title": "Projected Sells Price",
                    "type": "number",
                    "minimum": 1,
                    "minimum": 1,
                    "default": 0,
                    "md": 6
                },
                "finalizedSellsValue": {
                    "title": "Finalized Sells Value",
                    "type": "number",
                    "minimum": 1,
                    "minimum": 1,
                    "default": 0,
                    "md": 6
                }
            }
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "addPropertyType": {
                        "enum": [
                            "developer-property"
                        ]
                    }
                }
            },
            "then": {
                "required": [
                    "measurementUnits",
                    "developerPropertySellUnit",
                    "totalSellPropertyValue"
                ],
                "properties": {
                    "measurementUnits": {
                        "title": "Measurement Unit",
                        "enum": [
                            "sq-ft",
                            "sq-mtr",
                            "acres",
                            "hector",
                            "gutha",
                            "bigha"
                        ],
                        "enumNames": [
                            "Sq. ft.",
                            "Sq. mtr.",
                            "Acres",
                            "Hector",
                            "Gutha",
                            "Bigha"
                        ]
                    },
                    "developerPropertySellUnit": {
                        "title": "Property Sell Unit",
                        "enum": [
                            "per-sq-ft",
                            "fix"
                        ],
                        "enumNames": [
                            "Per Sq Feet",
                            "Fix"
                        ],
                        "default": "per-sq-ft"
                    },
                    "developerPropertyExtraArea": {
                        "title": "Developer Property Extra Area",
                        "type": "object",
                        "required": [
                            "priceRate",
                            "extraArea",
                            "totalExtraAreaValue"
                        ],
                        "properties": {
                            "priceRate": {
                                "title": "Price Rate",
                                "type": "number",
                                "minimum": 1,
                                "default": 0,
                                "md": 6
                            },
                            "extraArea": {
                                "title": "Extra Area",
                                "type": "number",
                                "minimum": 1,
                                "default": 0,
                                "md": 6
                            },
                            "totalExtraAreaValue": {
                                "title": "Total Extra Area Value",
                                "type": "number",
                                "readOnly": true
                            }
                        }
                    },
                    "totalSellPropertyValue": {
                        "title": "Total Property Value",
                        "type": "number",
                        "readOnly": true
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "developerPropertySellUnit": {
                                    "enum": [
                                        "per-sq-ft"
                                    ]
                                }
                            }
                        },
                        "then": {
                            "required": [
                                "developerPropertyPerSqFeetPrice",
                                "developerPropertyAreaType",
                                "developerPropertyArea",
                                "developerPropertyBasicPrice"
                            ],
                            "properties": {
                                "developerPropertyPerSqFeetPrice": {
                                    "title": "Per Sq Feet Price",
                                    "type": "number",
                                    "minimum": 1,
                                    "default": 0
                                },
                                "developerPropertyAreaType": {
                                    "title": "Area Type",
                                    "enum": [
                                        "carpet",
                                        "super-built-up"
                                    ],
                                    "enumNames": [
                                        "Carpet",
                                        "Super Built Up"
                                    ]
                                },
                                "developerPropertyArea": {
                                    "title": "Area",
                                    "type": "number",
                                    "minimum": 1,
                                    "default": 0
                                },
                                "developerPropertyBasicPrice": {
                                    "title": "Basic Price",
                                    "type": "number",
                                    "minimum": 1,
                                    "default": 0,
                                    "readOnly": true
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "developerPropertySellUnit": {
                                    "enum": [
                                        "fix"
                                    ]
                                }
                            }
                        },
                        "then": {
                            "required": [
                                "developerPropertyFixBasicPrice"
                            ],
                            "properties": {
                                "developerPropertyFixBasicPrice": {
                                    "title": "Fix Basic Price",
                                    "type": "number",
                                    "minimum": 1,
                                    "default": 0
                                }
                            }
                        }
                    }
                ]
            }
        }
    ]
}