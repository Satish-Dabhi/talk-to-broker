{
    "title": "Construction Property Size Details",
    "type": "object",
    "required": [
        "subPropertyType",
        "addPropertyType",
        "measurementUnits",
        "constructionPropertyType",
        "constructionPropertyBalconyArea",
        "constructionPropertyTerraceArea",
        "constructionPropertyTotalCarpet",
        "constructionPropertyBuiltUp",
        "constructionPropertySuperBuiltUp"
    ],
    "properties": {
        "subPropertyType": {
            "enum": [
                "apartment",
                "penthouse",
                "terrace-flat",
                "bungalow",
                "villa",
                "condominium",
                "cottage",
                "row-house",
                "duplex-house",
                "triplex-house",
                "farm-house",
                "stilt-house",
                "tree-house",
                "hut",
                "eco-friendly-house",
                "residential-plot",
                "any-other",
                "office",
                "shops",
                "showrooms",
                "commercial-open-plots",
                "commercial-land",
                "multifamily-use-land",
                "multifamily-use-plot",
                "retails-shops",
                "storage-warehouse",
                "hospital",
                "shopping-centre",
                "ind-office",
                "industrial-open-plots",
                "industrial-land",
                "special-purpose-land",
                "mixed-used-land",
                "mixed-use-plot",
                "multifamily-land",
                "warehouse",
                "factories",
                "industrial-shed",
                "cropped-land",
                "new-condition-land",
                "old-conditions-land"
            ],
            "hidden": true
        },
        "addPropertyType": {
            "enum": [
                "developer-property",
                "old-property"
            ],
            "hidden": true
        },
        "measurementUnits": {
            "title": "Measurement Unit",
            "enum": [
                "sq-ft",
                "sq-mtr",
                "acres",
                "hector",
                "gutha",
                "bigha"
            ],
            "enumNames": [
                "Sq. ft.",
                "Sq. mtr.",
                "Acres",
                "Hector",
                "Gutha",
                "Bigha"
            ],
            "md": 6
        },
        "constructionPropertyType": {
            "title": "Construction Property Type",
            "enum": [
                "carpet",
                "plot"
            ],
            "enumNames": [
                "Carpet",
                "Plot"
            ]
        },
        "constructionPropertyBalconyArea": {
            "title": "Balcony Area If Any",
            "type": "number",
            "minimum": 1,
            "default": 0
        },
        "constructionPropertyTerraceArea": {
            "title": "Terrace Area If Any",
            "type": "number",
            "minimum": 1,
            "default": 0
        },
        "constructionPropertyTotalCarpet": {
            "title": "Total Carpet",
            "type": "number",
            "readOnly": true
        },
        "constructionPropertyBuiltUp": {
            "title": "Built Up",
            "type": "number",
            "minimum": 1,
            "default": 0
        },
        "constructionPropertySuperBuiltUp": {
            "title": "Super Built-Up/Total Construction",
            "type": "number",
            "minimum": 1,
            "default": 0
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "subPropertyType": {
                        "enum": [
                            "penthouse"
                        ]
                    }
                }
            },
            "then": {
                "required": [
                    "constructionPropertyLowerFloorCarpet",
                    "constructionPropertyUpperFloorCarpet"
                ],
                "properties": {
                    "constructionPropertyLowerFloorCarpet": {
                        "title": "Lower Floor Carpet",
                        "type": "number",
                        "minimum": 1,
                        "default": 0
                    },
                    "constructionPropertyUpperFloorCarpet": {
                        "title": "Upper Floor Carpet",
                        "type": "number",
                        "minimum": 1,
                        "default": 0
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "addPropertyType": {
                        "enum": [
                            "developer-property"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "bifurcationOfArea": {
                        "title": "Bifurcation Of Carpet Area As Per RERA Authority",
                        "type": "object",
                        "required": [
                            "reraCarpet",
                            "balcony",
                            "terrace",
                            "washArea",
                            "totalArea"
                        ],
                        "properties": {
                            "reraCarpet": {
                                "title": "RERA Carpet",
                                "type": "number",
                                "minimum": 1,
                                "default": 0,
                                "md": 9
                            },
                            "balcony": {
                                "title": "Number Of Balcony",
                                "type": "string",
                                "subFieldTitle": "Size Of Balcony",
                                "md": 4
                            },
                            "terrace": {
                                "title": "Number Of Deck / Terrace",
                                "type": "string",
                                "subFieldTitle": "Size Of Terrace",
                                "md": 4
                            },
                            "washArea": {
                                "title": "Number Of Wash Area",
                                "type": "string",
                                "subFieldTitle": "Size Of Wash Area",
                                "md": 4
                            },
                            "totalArea": {
                                "title": "Total Area",
                                "type": "number",
                                "minimum": 1,
                                "default": 0,
                                "md": 6
                            }
                        }
                    }
                }
            }
        }
    ]
}